<div id="<%= dom_id recipe %>">
  <p>
    <strong>User:</strong>
    <%= recipe.user_id %>
  </p>

  <p>
    <strong>Name:</strong>
    <%= recipe.name %>
  </p>

  <p>
    <strong>Preparation time:</strong>
    <%= recipe.preparation_time.strftime("%H:%M") %>
  </p>

  <p>
    <strong>Cooking time:</strong>
    <%= recipe.cooking_time.strftime("%H:%M") %>
  </p>

  <p>
    <strong>Description:</strong>
    <%= recipe.description %>
  </p>

  <p>
    <strong>Public:</strong>
    <%= recipe.public %>
  </p>

</div>
